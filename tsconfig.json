        "baseUrl": ".",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "ESNext",
        "module": "commonjs",
        "strict": true,
        "moduleDetection": "force",
        "declaration": true,
        "declarationDir": "./types"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}

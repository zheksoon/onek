{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "declaration": true,
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "react",
        "react-compat",
        "mobx",
        "dist",
        "tests"
    ]
}
